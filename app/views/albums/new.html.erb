<h1>New Album</h1>

<form action="<%= band_albums_url %>" method="post" accept-charset="utf-8">

	<input type="hidden" name="authenticity_token" value="form_authenticity_token">

  <labe for="band">Band</label>
	<select name="album[band_id]" id="band" value="<%= @band.id %>">
		<% selected = "" %>
		<% Band.all.each do |band|%>
		  <% selected = "selected = selected" if band.id == @band.id %>
		  <option value="<%= band.id %>" <%= selected %>><%= band.name %></option>
			<% selected = "" %>
		<% end %>
	</select>
	<br>

	<label for="name">Name</label>
	<input type="text" name="album[name]">
  <br>

	<label for="live">Live</label>
	<input type="radio" name="album[recording_environment]" value="live" id="live">
	<label for="studio">Studio</label>
	<input type="radio" name="album[recording_environment]" value="studio" id="studio">

	<p><input type="submit" value="Add Album &rarr;"></p>
</form>