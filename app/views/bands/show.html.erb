<h1><%= @band.name %></h1>


<h2>Albums</h2>
<ul>
<% @band.albums.each do |album| %>
  <li><a href=<%= album_url(album) %>><%= album.name %></a>
<% end %>
</ul>

<%= button_to "Add Album", new_band_album_url(@band.id), :method => :get%>

<%= button_to "Delete Band", band_url, :method => :delete %>
<br><br>
<%= button_to "Back to Bands", bands_url, :method => :get %>